@page "/Usuarios/Nuevo"


<head>Nuevo Usuario</head>
<br />

<EditForm Model="@user">
	<DataAnnotationsValidator />

	<div class="fore=group row">
		<label fro="Codigo" class="col-sm-2 col-form-label">
			Código
		</label>
		<div class="col-sm-10">
			<InputText id="Codigo" class="form-control" placeholder="Código" @bind-Value="user.Codigo" />
			<ValidationMessage For="@(() => user.Codigo)" />
		</div>
	</div>

	<div class="fore=group row">
		<label fro="Nombre" class="col-sm-2 col-form-label">
			Nombre
		</label>
		<div class="col-sm-10">
			<InputText id="Nombre" class="form-control" placeholder="Nombre" @bind-Value="user.Nombre" />
			<ValidationMessage For="@(() => user.Nombre)" />
		</div>
	</div>



	
	<div class="fore=group row">
		<label fro="Clave" class="col-sm-2 col-form-label">
			Clave
		</label>
		<div class="col-sm-10">
			<InputText id="Clave" class="form-control" placeholder="Clave" @bind-Value="user.Clave" type="password"/>
			<ValidationMessage For="@(() => user.Clave)" />
		</div>
	</div>


	<div class="fore=group row">
		<label fro="EstaActivo" class="col-sm-2 col-form-label">
			Esta Activo
		</label>
		<div class="col-sm-10">
			<InputCheckbox @bind-Value="user.EstaActivo" />	
		</div>
	</div>



	<div class="fore=group row">
		<label fro="Rol" class="col-sm-2 col-form-label">
			Rol
		</label>
		<div class="col-sm-10">
			<InputSelect class="form-control" @bind-Value="user.Rol">	
				@foreach(var rol in Enum.GetValues(typeof(Roles)))
				{
					<option value="@rol"> @rol</option />
				}
			</InputSelect>
			<ValidationMessage For="@(() => user.Rol)" />
		</div>
	</div>

	<div class="fore=group row">
		<p>
			<input type="submit" class="btn-toolbar btn-primary" value="Guardar" @onclick="Guardar" />
			<input type="submit" class="btn-toolbar btn-danger" value="Cancelar" @onclick="Cancelar" />
		</p>
	</div>
	</EditForm>