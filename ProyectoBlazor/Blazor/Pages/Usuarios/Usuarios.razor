@page "/Usuarios"

<h3>Lista de Usuarios</h3>

@if (usuariosLista == null)
{
	<div class="spinner"></div>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Código</th>
				<th>Nombre</th>
				<th>Rol</th>
				<th>Esta Activo</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var user in usuariosLista)
			{
				<tr>
					<td>@user.Codigo</td>
					<td>@user.Nombre</td>
					<td>@user.Rol</td>
					<td>@user.EstaActivo</td>
				</tr>
			}
		</tbody>
	</table>
}



